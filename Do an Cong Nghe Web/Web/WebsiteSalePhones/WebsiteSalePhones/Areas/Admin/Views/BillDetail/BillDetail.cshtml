@model IEnumerable<Model.EF.ChiTietDonHang>

@{
    ViewBag.Title = "Bill Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{}
<h5><i>Chi tiết đơn hàng</i></h5>

<hr />
<table class="table table-bordered table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaDH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaDT)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonHang.DaThanhToan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaDT)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonHang.DaThanhToan)
            </td>
            <td>
                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaDH }, new AjaxOptions
                {
                    Confirm = "Bạn có muốn xóa bản ghi này?",
                    OnComplete = "$('#row_" + @item.MaDH + "').remove()",
                    HttpMethod = "Delete"
                })
            </td>
        </tr>
    }

</table>