@using WebsiteSalePhones.Models;
@model Model.EF.DienThoai
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Layout/UserLayout.cshtml";
}
<div class="span9">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Home</a> <span class="divider">/</span></li>
        <li><a href="@Url.Action("AllProduct","Phone")">Items</a> <span class="divider">/</span></li>
        <li class="active">Preview</li>
    </ul>
    <div class="well well-small">
        <div class="row-fluid">
            <div class="span5" style="margin:0;">
                <div id="myCarousel" class="carousel slide cntr">
                    <div class="carousel-inner">
                        <div class="item active">
                            <a href="#"> <img src="@Url.Content("~/Assets/Client/img/"+Model.AnhBia)" alt="" style="width:100%"></a>
                        </div>
                        <div class="item">
                            <a href="#"> <img src="@Url.Content("~/Assets/Client/img/"+Model.AnhBia)" alt="" style="width:100%"></a>
                        </div>
                        <div class="item">
                            <a href="#"> <img src="@Url.Content("~/Assets/Client/img/"+Model.AnhBia)" alt="" style="width:100%"></a>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                </div>
            </div>
            <div class="span7" style="margin:50px 0 0 10px;">
                <h3>@Model.TenDT</h3>
                <hr class="soft" />

                <form class="form-horizontal qtyFrm">
                    <div class="control-group">
                        <labe class="control-label"><span>Giá bán</span></labe>
                        <label class="control-label"><span style="margin-left:10%;">@string.Format("{0:0,0}", @Model.GiaBan) VNĐ</span></label>
                    </div>
                    <div class="control-group">
                        <labe class="control-label"><span>Số lượng trong kho: </span></labe>
                        <labe class="control-label"><span style="margin-left:10%;">@Model.SoLuongTon</span></labe>
                    </div>
                    <hr />
                    <p style="font-size:1.2em;">
                        @Model.GioiThieu
                    <p>
                        <hr />
                        <a class="shopBtn" href="/them-gio-hang?productID=@Model.MaDT&quantity=1" title="add to cart"><span class="fa fa-shopping-cart"></span>Add to cart</a>
                </form>
            </div>
        </div>
        <hr class="softn clr" />


        <ul id="productDetail" class="nav nav-tabs">
            <li class="active"><a href="#home" data-toggle="tab">Chi tiết sản phẩm</a></li>
            <li class=""><a href="#profile" data-toggle="tab">Sản phẩm liên quan</a></li>
        </ul>
        <div id="myTabContent" class="tab-content tabWrapper">
            <div class="tab-pane fade active in" id="home">
                <h4>Thông số kỹ thuật</h4>
                <p>@Model.MoTaChiTiet</p>
            </div>
            <div class="tab-pane fade" id="profile">
                <div class="row-fluid">
                    <div class="span2">
                        <img src="@Url.Content("~/Assets/Client/img/"+Model.AnhBia)" alt="">
                    </div>
                    <div class="span6">
                        <h5>@Model.TenDT</h5>
                        <p>
                            @Model.GioiThieu
                        </p>
                    </div>
                    <div class="span4 alignR">
                        <form class="form-horizontal qtyFrm">
                            <h4 style="color:red;">@Model.GiaBan.GetValueOrDefault(0).ToString("N0") VND</h4>
                            <div class="btn-group">
                                <a href="/them-gio-hang?productID=@Model.MaDT&quantity=1" class="defaultBtn"><span class="fas fa-shopping-cart"></span> Add to cart</a>
                                <a href="@Url.Action("ProductDetail","Phone",new {@MaDT=Model.MaDT})" class="shopBtn">VIEW</a>
                            </div>
                        </form>
                    </div>
                </div>
                <hr class="soft">
            </div>
        </div>

    </div>
</div>


